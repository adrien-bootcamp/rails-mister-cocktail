<div class="content">
  <h1><%= @cocktail.name.capitalize%></h1>
  <div class="content-cocktail">
    <% if @cocktail.photo.attached? %>
      <div class="img-cocktail"><%= cl_image_tag @cocktail.photo.key%></div>
    <% end %>
    <div class="content-cocktail-ingredients">
      <%@cocktail.doses.each do |dose| %>
        <div class="ingredient">
          <%= dose.description%> => <%= dose.ingredient.name%>   (<%= link_to "delete", dose_path(dose), method: :delete, data: { confirm: "Sure ?" }, class:"links"%>)
        </div>
      <% end %>
      <div class="links">
        <%= link_to "Add a dose", new_cocktail_dose_path(@cocktail) %>
        <br>
        <%= link_to "Back ðŸ”™", cocktails_path %>
      </div>
    </div>
  </div>
  <%= link_to "Delete this Cocktail", cocktail_path(@cocktail), method: :delete, data: { confirm: "Sure ?" }%>
</div>
